generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String    @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  ingredients String[]  @db.Text @default([])
  steps       String[]  @db.Text @default([])
  tips        String?
  tags        String[]  @default([])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
